<%= simple_form_for @movie, :html => { :multipart => true } do |f| %>
  <%= select_tag(:category_id, options_for_select(@categories), :prompt => "Select a Genre") %>
  <%= f.file_field :movie_img %>
  <%= f.input :title, label: "Movie Title" %>
  <%= f.input :description %>
  <%= f.input :director %>
  <%= f.input :length %>
  <%= f.input :rating %>
  <%= f.button :submit  %>
<% end  %>
